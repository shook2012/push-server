<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="torPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.connection.driver_class" value="${jdbc.driverClassName}" />
			<property name="hibernate.dialect"
				value="${hibernate.dialect}" />
			<property name="hibernate.connection.url" value="${jdbc.url}" />
			<property name="hibernate.connection.username" value="${jdbc.username}" />
			<property name="hibernate.connection.password" value="${jdbc.password}" />
			<property name="hibernate.show_sql" value="${jdbc.showSql}" />
            <property name="hibernate.validationQuery" value="SELECT 1" />
            <property name="hibernate.testOnBorrow" value="true" />
		</properties>
	</persistence-unit>
    
    <persistence-unit name="afiliacionPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>
            <property name="hibernate.connection.driver_class" value="${afiliacion.jdbc.driverClassName}" />
            <property name="hibernate.dialect"
                value="${afiliacion.hibernate.dialect}" />
            <property name="hibernate.connection.url" value="${afiliacion.jdbc.url}" />
            <property name="hibernate.connection.username" value="${afiliacion.jdbc.username}" />
            <property name="hibernate.connection.password" value="${afiliacion.jdbc.password}" />
            <property name="hibernate.show_sql" value="${jdbc.showSql}" />
            <property name="hibernate.validationQuery" value="SELECT 1" />
            <property name="hibernate.testOnBorrow" value="true" />
        </properties>
    </persistence-unit>
    
    <persistence-unit name="infoPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>
            <property name="hibernate.connection.driver_class" value="${info.jdbc.driverClassName}" />
            <property name="hibernate.dialect"
                value="${info.hibernate.dialect}" />
            <property name="hibernate.connection.url" value="${info.jdbc.url}" />
            <property name="hibernate.connection.username" value="${info.jdbc.username}" />
            <property name="hibernate.connection.password" value="${info.jdbc.password}" />
            <property name="hibernate.show_sql" value="${jdbc.showSql}" />
            <property name="hibernate.validationQuery" value="SELECT 1" />
            <property name="hibernate.testOnBorrow" value="true" />
        </properties>
    </persistence-unit>
</persistence>